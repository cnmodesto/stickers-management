<div id="add-form-container" class="container">
    <div class="row">
        <div class="col-md-12 wrapper">
            <div class="wrapper-title">
                <div class="row">
                    <div class="col-md-5">
                        <h2>Criar <b>Conta</b></h2>
                    </div>
                    <div class="col-md-7">
                        <a class="btn btn-secondary" href="/"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                            <span>Voltar</span></a>
                    </div>
                </div>
            </div>
            <div class="wrapper-items">
                <div class="login-form">
                    <form id="registrationForm" action="/register" method="post">
                        <div class="form-group">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input type="text" class="form-control" name="user" id="user" placeholder="Nome de UsuÃ¡rio"
                                required>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                            <input type="email" class="form-control" name="email" id="email" placeholder="E-mail"
                                required>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Senha" required>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            <input type="password" class="form-control" name="confirmPassword" id="confirmPassword"
                                placeholder="Confirmar senha" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Criar Conta</button>
                        </div>
                        <div id="messages">
                            {{#if message}}
                            <div class="alert alert-danger text-center" role="alert">
                                <span>{{message}}</span>
                            </div>
                            {{/if}}
                            {{#if error_msg}}
                            <div class="alert alert-danger text-center" role="alert">
                                <span>{{error_msg}}</span>
                            </div>
                            {{/if}}
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/script_registerForm.js"></script>