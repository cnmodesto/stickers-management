<div id="add-form-container" class="container">
    <div class="row">
        <div class="col-md-12 wrapper">
            <div class="wrapper-title">
                <div class="row">
                    <div class="col-md-5">
                        <h2><b>Login</b></h2>
                    </div>
                    <div class="col-md-7">
                    </div>
                </div>
            </div>
            <div class="wrapper-items">
                <div class="login-form">
                    <form action="/login" method="post">
                        <div class="form-group">
                            <i class="fa fa-user" aria-hidden="true"></i>
                            <input type="text" class="form-control" name="user" id="user" placeholder="Usuário"
                                required>
                        </div>
                        <div class="form-group">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Senha" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" type="submit">Acessar</button>
                        </div>
                        <hr>
                        <div class="text-center">
                            <a href="#" class="">Esqueceu a senha?</a>
                        </div>
                    </form>
                    <div id="messages">
                        {{#if messages}}
                        <div class="alert alert-danger text-center" role="alert">
                            <span>{{messages}}</span>
                        </div>
                        {{/if}}
                        {{#if success_msg}}
                        <div class="alert alert-success text-center" role="alert">
                            <span>{{success_msg}}</span>
                        </div>
                        {{/if}}
                    </div>
                    <p class="text-center">Ainda não tem conta? <a href="/register">Crie uma agora!</a></p>
                </div>
            </div>
        </div>
    </div>
</div>